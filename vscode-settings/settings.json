{
    // WINDOW
    "window.restoreWindows":"folders",
    "window.zoomLevel": 0,

    // EDITOR
    "editor.minimap.enabled": false,
    "editor.rulers": [ 80 ],
    "editor.renderWhitespace": "none",
    "editor.hideCursorInOverviewRuler": true,
    "editor.occurrencesHighlight": false,
    "editor.multiCursorModifier": "alt",
    "editor.tabSize": 2,
    "editor.find.seedSearchStringFromSelection": false,
    "editor.fontLigatures": true,
    // "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.formatOnSave": true, // Magic when used w/ Prettier

    // FILES
    "files.associations": {
        "*.hamlc": "haml"
    },

    // WORKBENCH
    "workbench.sideBar.location": "right",
    "workbench.statusBar.feedback.visible": false,
    "workbench.colorTheme": "Monokai Pro",
    "workbench.iconTheme": "Monokai Pro Icons",
    // Check this for later: https://code.visualstudio.com/docs/getstarted/theme-color-reference
    "workbench.colorCustomizations": {
        // EDITOR
        "editor.selectionHighlightBorder": "#78dce8",
        "editor.selectionBackground": "#d125ac9d",

        // TERMINAL
        // See also https://www.growingwiththeweb.com/2017/03/mastering-vscodes-terminal.html
        "terminal.background" :"#000000",
        "terminal.ansiBlue": "#2ea8e1",
        "terminal.selectionBackground": "#fffb0073"
    },


    // EXTENSIONS
    // "calva.autoConnect": false,
    "gitlens.settings.mode": "advanced",
    "gitlens.views.repositories.files.layout": "list",
    "todo.archive.sortByDate": true,
    "todo.embedded.providers.ag.regex": "(?:#|//|/\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(TODO|FIXME|FIX|BUG|UGLY|HACK|NOTE|IDEA|REVIEW|DEBUG|OPTIMIZE|HB TODO)",
    "todo.embedded.providers.rg.regex": "(?:#|//|/\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(TODO|FIXME|FIX|BUG|UGLY|HACK|NOTE|IDEA|REVIEW|DEBUG|OPTIMIZE| HB TODO)",
    "todo.embedded.regex": "(?:<!-- *)?(?:#|//|/\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(TODO|FIXME|FIX|BUG|UGLY|HACK|NOTE|IDEA|REVIEW|DEBUG|OPTIMIZE|HB TODO)(?:\\s*\\([^)]+\\))?:?(?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|((?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))",
    "todo.colors.types": { "HB TODO": "#c571f2" },
    "todo.file.exclude": [
        "**/.!(todo|todos|task|tasks)/**",
        "**/_output/**",
        "**/bower_components/**",
        "**/build/**",
        "**/dist/**",
        "**/node_modules/**",
        "**/out/**",
        "**/output/**",
        "**/release/**",
        "**/releases/**",
        "**/static/**",
        "**/target/**",
        "**/third_party/**",
        "**/vendor/**",
        "**/tmp/**"
    ],
    "todo.embedded.exclude": [
        "**/.*",
        "**/.*/**",
        "**/_output/**",
        "**/bower_components/**",
        "**/build/**",
        "**/dist/**",
        "**/node_modules/**",
        "**/out/**",
        "**/output/**",
        "**/release/**",
        "**/releases/**",
        "**/static/**",
        "**/target/**",
        "**/third_party/**",
        "**/vendor/**",
        "**/*.min.*",
        "**/*.map",
        "**/tmp/**",
        "**/*.{3ds,3g2,3gp,7z,a,aac,adp,ai,aif,aiff,alz,ape,apk,ar,arj,asf,au,avi,bak,baml,bh,bin,bk,bmp,btif,bz2,bzip2,cab,caf,cgm,class,cmx,cpio,cr2,csv,cur,dat,dcm,deb,dex,djvu,dll,dmg,dng,doc,docm,docx,dot,dotm,dra,DS_Store,dsk,dts,dtshd,dvb,dwg,dxf,ecelp4800,ecelp7470,ecelp9600,egg,eol,eot,epub,exe,f4v,fbs,fh,fla,flac,fli,flv,fpx,fst,fvt,g3,gif,graffle,gz,gzip,h261,h263,h264,icns,ico,ief,img,ipa,iso,jar,jpeg,jpg,jpgv,jpm,jxr,key,ktx,lha,lib,lvp,lz,lzh,lzma,lzo,m3u,m4a,m4v,mar,mdi,mht,mid,midi,mj2,mka,mkv,mmr,mng,mobi,mov,movie,mp3,mp4,mp4a,mpeg,mpg,mpga,mxu,nef,npx,numbers,o,oga,ogg,ogv,otf,pages,pbm,pcx,pdb,pdf,pea,pgm,pic,png,pnm,pot,potm,potx,ppa,ppam,ppm,pps,ppsm,ppsx,ppt,pptm,pptx,psd,pya,pyc,pyo,pyv,qt,rar,ras,raw,resources,rgb,rip,rlc,rmf,rmvb,rtf,rz,s3m,s7z,scpt,sgi,shar,sil,sketch,slk,smv,so,sub,swf,tar,tbz,tbz2,tga,tgz,thmx,tif,tiff,tlz,ttc,ttf,txz,udf,uvh,uvi,uvm,uvp,uvs,uvu,viv,vob,war,wav,wax,wbmp,wdp,weba,webm,webp,whl,wim,wm,wma,wmv,wmx,woff,woff2,wvx,xbm,xif,xla,xlam,xls,xlsb,xlsm,xlsx,xlt,xltm,xltx,xm,xmind,xpi,xpm,xwd,xz,z,zip,zipx}"
      ],

    // TERMINAL
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.shellArgs.linux": [
        "-l"
    ],
    "terminal.integrated.cursorBlinking": true,

    "breadcrumbs.enabled": true,

    "diffEditor.renderSideBySide": false,
    "gitlens.menus": {
        "editor": {
            "blame": false,
            "clipboard": true,
            "compare": true,
            "details": false,
            "history": false,
            "remote": false
        },
        "editorGroup": false,
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true,
            "stashInline": true
        },
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true,
            "stash": true
        }
    },
    "calva.autoConnect": false,
    "gitlens.statusBar.enabled": false,
    "code-runner.clearPreviousOutput": true,
    "color-highlight.markRuler": false,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "trailing-spaces.backgroundColor": "rgba(229, 52, 214, 1)",
    "trailing-spaces.borderColor": "rgba(255,255,255,1)",
    "trailing-spaces.includeEmptyLines": false,
    "prettier.requireConfig": true,
    "extensions.ignoreRecommendations": false
}